        android:textSize="16sp"
        android:padding="12dp"
        android:background="#D3D3D3"
        android:textColor="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/buttonsContainer"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/addressText"
